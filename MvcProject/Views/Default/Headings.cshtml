@using EntityLayer.Concrete
@model List<Heading>
@{
    Layout = null;


}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Başlıklar</title>
    <link rel="stylesheet" href="~/voler-master/dist/assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/voler-master/dist/assets/vendors/perfect-scrollbar/perfect-scrollbar.css">
    <link rel="stylesheet" href="~/voler-master/dist/assets/css/app.css">
    <link rel="shortcut icon" href="~/voler-master/assets/images/favicon.svg" type="image/x-icon">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="dist/css/adminlte.min.css">
    <style>
        body {
            font-weight: 400;
        }

        .vd {
            color: red;
        }

        .field-validation-error {
            color: red;
            font-weight: bold;
            background-color: white;
        }

        .input-validation-error {
            font-weight: bold;
            color: red;
            background-color: azure;
        }

        .page-header {
            background-color: #fff;
            border-radius: 10px;
            -webkit-box-shadow: 0 0 28px rgba(0,0,0,.08);
            box-shadow: 0 0 28px rgba(0,0,0,.08);
            margin-bottom: 30px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div id="app">
        <div id="sidebar" class='active'>
            <div class="sidebar-wrapper active">
                <div class="sidebar-menu">
                    <ul style="margin-top:0.2em" class="menu">
                        <a href="/Login/WriterLogin">
                        <li class='sidebar-title'>Yazar Paneli</li>
                        </a>
                        <li class='sidebar-title'>Başlıklar</li>
                        @foreach (var x in Model)
                        {
                            <li class="sidebar-item  ">
                                <a href="/Default/Headings/@x.HeadingID" class='sidebar-link'>
                                    <i data-feather="circle" style="max-width:10px;min-width:10px"></i>
                                    <span>@x.HeadingName</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
                <button class="sidebar-toggler btn x"><i data-feather="x"></i></button>
            </div>
        </div>
        <div id="main">
            <div>
                @*@RenderBody()
                  *@
                @Html.Action("Index","Default")
            </div>
        </div>
    </div>
    <script src="~/voler-master/dist/assets/js/feather-icons/feather.min.js"></script>
    <script src="~/voler-master/dist/assets/vendors/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/voler-master/dist/assets/js/app.js"></script>
    <script src="~/voler-master/dist/assets/js/main.js"></script>
</body>
</html>


