@using EntityLayer.Concrete
@model List<Category>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CategoryList</title>
    <link href="~/Content/categorylist.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div id="tableDiv">
        <table class="table table-striped table-bordered table-hover tablo1">
            <thead>

                <tr>
                    <th>ID</th>
                    <th>Kategori</th>
                    <th>Açıklama</th>
                    <th>Durum</th>
                    <th>Düzenleme</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.CategoryID</td>
                        <td>@x.CategoryName</td>
                        <td id="cdescp">@x.CategoryDescription</td>
                        <td>@x.CategoryStatus</td>
                        <td id="settings">
                            <a id="sil" class="btn btn-outline-danger">Sil</a>
                            <a id="sil" class="btn btn-outline-success">Güncelle</a>
                            <a id="cStatus" class="btn btn-outline-primary">Durum Değiştir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a id="btn1" class="btn btn-info">Yeni Kategori Girişi</a>
    </div>
</body>
</html>
