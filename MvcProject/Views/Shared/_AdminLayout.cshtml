@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel="stylesheet" href="~/voler-master/dist/assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/voler-master/dist/assets/vendors/perfect-scrollbar/perfect-scrollbar.css">
    <link rel="stylesheet" href="~/voler-master/dist/assets/css/app.css">
    <link rel="shortcut icon" href="~/voler-master/assets/images/favicon.svg" type="image/x-icon">
    <style>
        .vd {
            color: red;
        }

        .field-validation-error {
            color: red;
            font-weight: bold;
            background-color: white;
        }

        .input-validation-error {
            font-weight: bold;
            color: red;
            background-color: azure;
        }
    </style>
